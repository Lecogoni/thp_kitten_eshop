<div class="row container">
  <div class="col-lg-6">
    <h2><%= @product.title %></h2>
    <p><%= @product.description %></p>
    <p><strong>Price : </strong><%= @product.price %>$</p>
    <p><strong>Format : </strong><%= @product.format %></p>
    <div class="row">
  <div class="mr-4"><%= link_to 'Back', root_path, :class => "btn btn-outline-info mb-4" %></div>

      <% if user_signed_in? %>
        <div><%= button_to 'Add to cart', line_items_path(product_id: @product), :class => "btn btn-outline-success mb-4" %></div>
      <% else %> 
        <p>Si vous souhaitez achetez cet article vous devez vous loger<br>
        c'est par <%= link_to 'Ici', new_user_session_path, :class => "btn btn-outline-info mb-4" %></p>
      <% end %> 
    </div>
    <div>
    <% if user_signed_in? %>
      <% if current_user.admin == true %>
        <%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-outline-danger mr-4"  %>
      <% end %>
    <% end %>
    </div>

  </div>
  <div class="col-lg-6">
    <img class="card-img-top" src="<%= @product.image_url %>" alt="">
  </div>
</div>







