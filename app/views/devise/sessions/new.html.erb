<body>
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div id="first">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h1>Login</h1>
              </div>
            </div>
            <form action="" method="post" name="login">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :login %><br />
                  <input class="form-control" placeholder="Enter email" <%= f.text_field :login, autofocus: true %>
                </div>
                <br>
                <div class="field">
                  <%= f.label :password %><br />
                  <input class="form-control" placeholder="Enter Password" <%= f.password_field :password, autocomplete: "current-password" %> 
                </div>
                <br>
                <br>
                <div class="col-md-12 text-center">
                  <button class=" btn btn-block mybtn btn-primary tx-tfm" <%= f.submit %> Login</button>
                </div>
                <div class="col-md-12 ">
                  <div class="login-or">
                    <hr class="hr-or">
                    <span class="span-or">or</span>
                  </div>
                </div>
                <div class="form-group">
                  <p class="text-center">Don't have account? <a href=<%= new_user_registration_path %> id="signup">Sign up here</a></p>
                </div>
                <div class="form-group">
                  <p class="text-center"><a href=<%= new_user_password_path%> id="signup">Forgot Password ?</a></p>
                </div>
              <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>     
</body>