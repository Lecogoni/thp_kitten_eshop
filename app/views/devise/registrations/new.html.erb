



<body>
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div id="first">
          <div class="myform form ">
            <div class="logo mb-3">
              <div class="col-md-12 text-center">
                <h1>Sign up</h1>
              </div>
            </div>
            <form action="" method="post" name="login">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.label :username %><br/>
                <input class="form-control" placeholder="Enter Username" <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
              </div>
              <br>
              <div class="field">
                <%= f.label :email %><br />
                <input class="form-control" placeholder="Enter email" <%= f.email_field :email, autocomplete: "email" %>
              </div>
              <br>
              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br/>
                <input class="form-control" placeholder="Enter Password" <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
              <br/>
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <input class="form-control" placeholder="Confirm Password" <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
              <br>
              <div class="col-md-12 text-center ">
                <button class=" btn btn-block mybtn btn-primary tx-tfm" <%= f.submit "Sign up" %> Sign Up</button>
              </div>
              <div class="col-md-12 ">
                <div class="login-or">
                  <hr class="hr-or">
                    <span class="span-or">or</span>
                </div>
              </div>
              <div class="form-group">
                <p class="text-center">Have an account? <a href=<%= new_user_session_path %> id="signup">Log In here</a></p>
              </div>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>




