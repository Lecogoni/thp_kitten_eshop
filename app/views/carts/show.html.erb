<p id="notice"><%= notice %></p>

<h1>Cart de <%= current_user.username %></h1>

<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>

<div>
<ul>
<% @cart.line_items.each do |item|  %>
  <li><%= item.product.title%> - <%= item.quantity%> - <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></li>

<% end %>


</ul>


</div>


<div>
  <%= button_to 'Confirmer Commande', @cart, method: :delete, data: {confirm: "Are you sure ?"}, class: ""%>
</div>


<div>
  <h4>Total: </h4>
  <%= number_to_currency(@cart.total_price) %>
</div>


<%= button_to 'Add to cart', line_items_path(product_id: @product) %>

<%= link_to 'Passer la commande (LEGACY)',
new_payment_path(12), class: "btn btn-primary"%>

<%= link_to 'Passer la commande (NEXT GEN)',
checkout_create_path(12), class: "btn btn-primary", remote: true %>


<div>

  <p>
      <span>is user sign in : <%= user_signed_in? %></span><br>
     <span>current_user is <%= current_user %></span><br>
    <span>user_session is <%= user_session %></span>
  </p>
</div>