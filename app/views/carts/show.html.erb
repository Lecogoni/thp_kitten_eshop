<h1>Mon panier</h1>

<div class="mt-5">
  <div class="mt-3 mb-4">
    <h3>My shopping cat list</h3>
  </div>
  
  <ul>
    <% @cart.line_items.each do |item|  %>
      <li><%= item.product.title%> - <%= item.quantity%> - <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
  </ul>
</div>


 

<div  class="mb-5">
  <h4>Total: </h4>
  <%= number_to_currency(@cart.total_price) %>
</div>

<%
=begin%>
 
<div class="mb-3">
  <%= button_to 'Vider mon panier', @cart, method: :delete, data: {confirm: "Are you sure ?"}, class: ""%>
</div>  
<%
=end%>


<% if @cart.total_price >= 0 %>
  <%= link_to 'Passer la commande',
  checkout_create_path(total: @total_price, cart: @cart, cart_item: @cart.line_items), method: :post, class: "btn btn-primary", remote: true %>
<% end %>
